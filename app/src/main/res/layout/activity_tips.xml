<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F3"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Title -->

    <!-- Cute Text Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="🐾 Share Your Pet Wisdom!"
        android:textColor="#333"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTip"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Write a helpful tip for other pet parents 🐶🐱"

        android:padding="16dp"
        android:textColor="#333"
        android:gravity="top"
        android:textSize="15sp"
        android:inputType="textMultiLine" />

    <!-- Image Upload -->
    <Button
        android:id="@+id/btnAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📸 Add a Cute Photo"
        android:background="@color/white"
        android:textColor="#1B1616"
        android:layout_marginTop="12dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✨ Share Tip"
        android:background="@color/cardview_dark_background"
        android:textColor="#191818"
        android:layout_marginTop="16dp" />

    <!-- Divider -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💬 Community Tips"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="#444" />

    <!-- Tip List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tipsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />
</LinearLayout>
