<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFF8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="🐾 Pet Care"
                android:textColor="#FF6B6B"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@android:drawable/ic_menu_search" />
        </RelativeLayout>

        <!-- Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tab_animal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_launcher_foreground"
                    android:padding="12dp"
                    android:text="🐶 Animal ID"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tab_services"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="📍 Services"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tab_tips"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="🦴 Tips"
                    android:textColor="#444"
                    android:textSize="16sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Separator -->
        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#FFD3B6" />

        <!-- Sections -->
        <!-- Repeat this pattern for each section below, keeping the idea of friendly titles, icons, and spacing -->

        <!-- Example Section -->

        <!-- Repeat similar layout structure for the other sections like service locator, pet shops, care tips -->

        <!-- Bottom Navigation (Cute Version) -->
        <LinearLayout
            android:id="@+id/ll_identify_animal_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_identify_animal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 Identify an Animal"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_identify_animal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Take a photo and we'll help you find out what pet or animal it is!"
                android:textColor="#555"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_camera_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:contentDescription="Camera"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="310dp"
            android:background="#FFE4E1"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="4">

            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="🏠\nHome"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="👤\nProfile"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>