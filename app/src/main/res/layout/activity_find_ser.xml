<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cute Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby Pet Help 🐾"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Location Info -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Searching near you..."
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />

        <!-- 🩺 Doctors Section -->
        <TextView
            android:id="@+id/doctorsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🩺 Vets Nearby"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4E4E4E"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vetRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:padding="12dp"
            android:nestedScrollingEnabled="false" />

        <!-- 🛒 Pet Shops Section -->
        <TextView
            android:id="@+id/petshopsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🛒 Pet Shops Nearby"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4E4E4E"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>

