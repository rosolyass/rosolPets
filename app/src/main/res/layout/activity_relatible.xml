<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E6F6"
    android:padding="24dp"
    android:id="@+id/main">

    <!-- Animal Image -->
    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Animal Image" />

    <!-- Animal Type -->
    <TextView
        android:id="@+id/animal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/animal_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="🐾 Type 🐾"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FF61A6"
        android:fontFamily="casual" />

    <!-- Breed Information -->
    <TextView
        android:id="@+id/breed_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/animal_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Breed: Type"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif" />

    <!-- Care Tips Section Title -->
    <TextView
        android:id="@+id/care_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/breed_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="💡 Care Tips 💡"
        android:textColor="#FF61A6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Care Tips Content -->
    <TextView
        android:id="@+id/care_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/care_tips_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Tips 🐶❤️"
        android:textSize="16sp"
        android:textColor="#444444"
        android:fontFamily="sans-serif" />

    <!-- Recommended Food Title -->
    <TextView
        android:id="@+id/recommended_food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/care_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="🍽️ Recommended Food 🍽️"
        android:textColor="#FF61A6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Recommended Food Content -->
    <TextView
        android:id="@+id/recommended_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommended_food_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Recommended food 🐔"
        android:textSize="16sp"
        android:textColor="#444444"
        android:fontFamily="sans-serif" />

    <!-- Age Info Title -->
    <TextView
        android:id="@+id/age_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommended_food"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="🎂 Age Info 🎂"
        android:textColor="#FF61A6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Age Info Content -->
    <TextView
        android:id="@+id/age_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age_info_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Age 🐾"
        android:textSize="16sp"
        android:textColor="#444444"
        android:fontFamily="sans-serif" />

    <!-- Take Another Photo Button -->
    <Button
        android:id="@+id/take_another_photo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age_info"
        android:layout_marginTop="27dp"
        android:backgroundTint="#FF61A6"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="Take Another Photo 📸"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>
